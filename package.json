{
  "name": "tradetrust-website",
  "version": "2.0.0",
  "scripts": {
    "build": "run-s check-types build:css build:app",
    "build:css": "NODE_ENV=production postcss src/tailwind.css -o src/index.css",
    "build:app": "NODE_ENV=production webpack --progress --mode production",
    "check-types": "tsc --sourceMap false --noEmit",
    "dev:css": "postcss src/tailwind.css -o src/index.css --watch",
    "dev:serve": "sleep 2 && NODE_ENV=development webpack-dev-server",
    "dev": "run-p dev:*",
    "lint": "eslint ./src --ext .js,.ts,.tsx,.mdx --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "integration": "testcafe chrome src/**/*.spec.js",
    "integration:single": "testcafe chrome -L",
    "integration:headless": "testcafe -c 4 chrome:headless src/**/*.spec.js",
    "integration:watch": "nodemon --exec \"npm run integration\" --watch src",
    "integration:wait": "wait-on -l -i 1000 tcp:8545 http-get://localhost:3000",
    "integration:transfers": "node ./integration/local/index.mjs",
    "blockchain": "ganache-cli --mnemonic \"indicate swing place chair flight used hammer soon photo region volume shuffle\"",
    "integration:local": "NET=local npm run dev",
    "integration:contracts": "./scripts/integration-contracts.sh",
    "integration:metamask": "run-s integration:wait integration:contracts integration:transfers",
    "integration:dappeteer": "concurrently -k -s first \"npm:blockchain\" \"npm:integration:local\" \"npm:integration:metamask\"",
    "prep": "npm run lint:fix && npm run test && ./scripts/integration-headless.sh && npm run integration:dappeteer",
    "serve-static": "http-server dist -s -p 3000",
    "storybook": "npm run build:css && sleep 2 && start-storybook -p 6006 -s public",
    "storybook:build": "npm run build:css && sleep 2 && build-storybook -o docs -s public",
    "test": "jest --env=jest-environment-jsdom-sixteen",
    "test:coverage": "npm run test -- --collectCoverage",
    "test:watch": "npm run test -- --watchAll",
    "test:update": "npm run test -- -u"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.3.0",
    "@govtechsg/address-identity-resolver": "^1.4.1",
    "@govtechsg/decentralized-renderer-react-components": "^3.0.0",
    "@govtechsg/ethers-contract-hook": "^2.2.0",
    "@govtechsg/oa-encryption": "^1.3.3",
    "@govtechsg/oa-verify": "^6.0.0",
    "@govtechsg/open-attestation": "^4.0.0",
    "@govtechsg/open-attestation-cli": "^1.39.2",
    "@govtechsg/token-registry": "^2.5.1",
    "@govtechsg/tradetrust-ui-components": "~1.13.0",
    "@hot-loader/react-dom": "^17.0.1",
    "connected-react-router": "^6.9.1",
    "date-fns": "^2.21.2",
    "date-fns-tz": "^1.1.4",
    "debug": "^4.3.1",
    "ethers": "^5.1.4",
    "history": "^4.10.1",
    "isomorphic-fetch": "^3.0.0",
    "lodash": "^4.17.21",
    "pretty-bytes": "^5.6.0",
    "prop-types": "^15.6.1",
    "qr-scanner": "^1.2.0",
    "qrcode.react": "^1.0.1",
    "query-string": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.2",
    "react-feather": "^2.0.9",
    "react-google-recaptcha": "^2.1.0",
    "react-helmet": "^6.1.0",
    "react-hot-loader": "^4.12.14",
    "react-markdown": "^6.0.1",
    "react-redux": "^7.2.4",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-router-hash-link": "^2.4.1",
    "react-tooltip": "^4.2.19",
    "redux": "^4.1.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-saga": "^1.1.3",
    "twin.macro": "1.12.1",
    "use-persisted-state": "^0.3.3"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.13.8",
    "@babel/plugin-proposal-optional-chaining": "^7.13.12",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@openzeppelin/test-environment": "^0.1.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.2",
    "@types/debug": "^4.1.5",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@types/qrcode.react": "^1.0.1",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@types/react-helmet": "^6.1.1",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-router-hash-link": "^1.2.1",
    "@types/react-tooltip": "^4.2.4",
    "@types/use-persisted-state": "^0.3.0",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-macros": "^3.1.0",
    "brotli-webpack-plugin": "^1.1.0",
    "compression-webpack-plugin": "^6.1.1",
    "concurrently": "^6.0.2",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^5.2.4",
    "dappeteer": "rjchow/dappeteer",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "7.25.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-mdx": "^1.13.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "esm": "^3.1.1",
    "expect-puppeteer": "^5.0.3",
    "file-loader": "^6.2.0",
    "frontmatter-markdown-loader": "^3.6.2",
    "ganache-cli": "^6.12.2",
    "html-webpack-plugin": "^4.5.2",
    "http-server": "^0.12.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-environment-jsdom-sixteen": "^2.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.14",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "puppeteer": "^9.1.1",
    "react-test-renderer": "^17.0.2",
    "sinon": "^10.0.0",
    "style-loader": "^2.0.0",
    "tailwindcss": "^1.9.6",
    "testcafe": "^1.14.0",
    "typescript": "^4.2.4",
    "wait-on": "^5.3.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.2",
    "webpack-env": "^0.8.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-nullish-coalescing-operator",
      "@babel/plugin-proposal-optional-chaining",
      "react-hot-loader/babel",
      "macros"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true
    },
    "extends": [
      "plugin:react/recommended",
      "plugin:testcafe/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "react-hooks",
      "testcafe"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react/prop-types": "off",
      "react/self-closing-comp": "error",
      "array-callback-return": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "no-unused-expressions": "off",
      "jest/no-disabled-tests": "error",
      "no-shadow": "off"
    },
    "overrides": [
      {
        "files": [
          "src/**/*.{ts,tsx}"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off",
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/no-shadow": [
            "error"
          ]
        }
      },
      {
        "files": [
          "*.test.{ts,tsx}",
          "*.stories.{ts,tsx}"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/ban-types": "off",
          "@typescript-eslint/no-empty-function": "off"
        }
      },
      {
        "files": [
          "*.md"
        ],
        "rules": {
          "prettier/prettier": [
            2,
            {
              "parser": "markdown"
            }
          ]
        }
      },
      {
        "files": [
          "*.mdx"
        ],
        "extends": [
          "plugin:mdx/overrides",
          "plugin:mdx/recommended"
        ]
      },
      {
        "files": [
          "**/*.test.js"
        ],
        "env": {
          "jest": true
        },
        "extends": [
          "plugin:jest/all"
        ],
        "rules": {
          "jest/prefer-expect-assertions": "off",
          "jest/no-hooks": "off"
        }
      }
    ]
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "sonar56x": true,
    "reportPath": ".coverage",
    "reportFile": "sonar-report.xml",
    "indent": 2
  },
  "prettier": {
    "printWidth": 120
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TradeTrust/tradetrust-website.git"
  }
}
