{
  "name": "tradetrust-website",
  "version": "2.0.0",
  "scripts": {
    "build": "npm run check-types && NODE_ENV=production webpack --progress --mode production",
    "check-types": "tsc --sourceMap false --noEmit",
    "dev": "NODE_ENV=development webpack-dev-server",
    "lint": "eslint ./src --ext .js,.ts,.tsx,.mdx --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "integration": "testcafe chrome src/**/*.spec.js",
    "integration:single": "testcafe chrome -L",
    "integration:headless": "testcafe -c 4 chrome:headless src/**/*.spec.js",
    "integration:watch": "nodemon --exec \"npm run integration\" --watch src",
    "prep": "run-p lint:fix stylelint:fix test integration",
    "serve-static": "http-server dist -s -p 3000",
    "storybook": "start-storybook -p 6006 -s public",
    "storybook:build": "build-storybook -o docs  -s public",
    "stylelint": "stylelint 'src/**/*.scss'",
    "stylelint:fix": "stylelint 'src/**/*.scss' --syntax scss --fix",
    "test": "jest --env=jest-environment-jsdom-sixteen",
    "test:coverage": "npm run test -- --collectCoverage",
    "test:watch": "npm run test -- --watchAll",
    "test:update": "npm run test -- -u"
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@govtechsg/decentralized-renderer-react-components": "^3.0.0",
    "@govtechsg/dnsprove": "^2.0.5",
    "@govtechsg/ethers-contract-hook": "^2.1.1",
    "@govtechsg/oa-encryption": "1.3.1",
    "@govtechsg/oa-verify": "3.2.0",
    "@govtechsg/open-attestation": "^3.6.0",
    "@govtechsg/token-registry": "^1.3.0",
    "@hot-loader/react-dom": "^16.9.0",
    "axios": "^0.19.0",
    "axios-extensions": "^3.1.3",
    "bootstrap": "^4.4.1",
    "connected-react-router": "^6.5.2",
    "date-fns": "^2.14.0",
    "debug": "^4.1.0",
    "ethers": "^4.0.47",
    "history": "^4.10.1",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.15",
    "node-sass": "^4.12.0",
    "papaparse": "^5.1.1",
    "polished": "^3.5.1",
    "pretty-bytes": "^5.3.0",
    "prop-types": "^15.6.1",
    "query-string": "^6.11.0",
    "react": "^16.11.0",
    "react-bootstrap": "^1.0.1",
    "react-dom": "^16.6.3",
    "react-dropdown-select": "^4.3.1",
    "react-dropzone": "^7.0.1",
    "react-google-recaptcha": "^1.0.5",
    "react-helmet": "^5.2.1",
    "react-hot-loader": "^4.12.14",
    "react-qr-reader": "^2.2.1",
    "react-qr-svg": "^2.2.2",
    "react-redux": "^7.1.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-router-hash-link": "^1.2.2",
    "react-tooltip": "^3.11.3",
    "react-transition-group": "^4.3.0",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.7",
    "redux-saga": "^0.16.0",
    "use-persisted-state": "^0.3.0",
    "validator": "^13.0.0",
    "web3-utils": "^1.2.6"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "7.6.0",
    "@openzeppelin/test-environment": "^0.1.3",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-docs": "^5.3.14",
    "@storybook/addon-knobs": "^5.3.14",
    "@storybook/addons": "^5.3.14",
    "@storybook/preset-create-react-app": "^2.0.0",
    "@storybook/react": "^5.3.14",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/debug": "4.1.5",
    "@types/enzyme": "3.10.3",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "@types/papaparse": "^5.0.3",
    "@types/react": "16.9.2",
    "@types/react-dom": "^16.9.5",
    "@types/react-helmet": "5.0.13",
    "@types/react-redux": "7.1.5",
    "@types/react-router-dom": "^5.1.4",
    "@types/react-router-hash-link": "^1.2.1",
    "@types/react-tooltip": "^3.11.0",
    "@types/react-transition-group": "^4.2.4",
    "@types/use-persisted-state": "^0.3.0",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "2.3.2",
    "@typescript-eslint/parser": "2.3.2",
    "babel-jest": "^25.2.3",
    "babel-loader": "8.0.6",
    "brotli-webpack-plugin": "^1.1.0",
    "compression-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.4.0",
    "eslint-plugin-jest": "22.17.0",
    "eslint-plugin-mdx": "1.5.6",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-react-hooks": "2.1.2",
    "eslint-plugin-testcafe": "^0.2.1",
    "esm": "^3.1.1",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.12.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "react-scripts": "^3.4.0",
    "react-test-renderer": "^16.8.6",
    "sass-loader": "^8.0.0",
    "sinon": "^7.1.1",
    "style-loader": "^1.0.0",
    "stylelint": "^12.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^19.0.0",
    "testcafe": "^1.6.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-nullish-coalescing-operator",
      "@babel/plugin-proposal-optional-chaining",
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "prettier/react",
      "plugin:testcafe/recommended"
    ],
    "plugins": [
      "react-hooks",
      "testcafe"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "react/prop-types": "off",
      "react/self-closing-comp": "error",
      "array-callback-return": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "no-unused-expressions": "off",
      "jest/no-disabled-tests": "error"
    },
    "overrides": [
      {
        "files": [
          "*.md"
        ],
        "rules": {
          "prettier/prettier": [
            2,
            {
              "parser": "markdown"
            }
          ]
        }
      },
      {
        "files": [
          "*.mdx"
        ],
        "extends": [
          "plugin:mdx/overrides",
          "plugin:mdx/recommended"
        ]
      },
      {
        "files": [
          "**/*.test.js"
        ],
        "env": {
          "jest": true
        },
        "extends": [
          "plugin:jest/all"
        ],
        "rules": {
          "jest/prefer-expect-assertions": "off",
          "jest/no-hooks": "off"
        }
      }
    ]
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "sonar56x": true,
    "reportPath": ".coverage",
    "reportFile": "sonar-report.xml",
    "indent": 2
  },
  "prettier": {
    "printWidth": 120
  }
}
