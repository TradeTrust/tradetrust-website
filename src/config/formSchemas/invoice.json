{
  "name": "Invoice",
  "type": "VERIFIABLE_DOCUMENT",
  "defaults": {
    "@context": [
      "https://trustvc.io/context/invoice.json"
    ],
    "renderMethod": 
      {
        "type": "EMBEDDED_RENDERER",
        "templateName": "INVOICE",
        "id": "https://generic-templates.tradetrust.io"
      }
    ,
    "credentialSubject": {
      "type": [
        "Invoice"
      ]
    }
  },
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "invoiceId": {
        "type": "string",
        "title": "Invoice ID"
      },
      "invoiceName": {
        "type": "string",
        "title": "Invoice Name"
      },
      "date": {
        "type": "string",
        "title": "Date"
      },
      "customerId": {
        "type": "string",
        "title": "Customer ID"
      },
      "terms": {
        "type": "string",
        "title": "Terms"
      },
      "billFrom": {
        "type": "object",
        "title": "Bill From",
        "properties": {
          "billFromName": {
            "type": "string",
            "title": "Name"
          },
          "billFromStreetAddress": {
            "type": "string",
            "title": "Street Address"
          },
          "billFromCity": {
            "type": "string",
            "title": "City"
          },
          "billFromPostalCode": {
            "type": "string",
            "title": "Postal Code"
          },
          "billFromPhoneNumber": {
            "type": "string",
            "title": "Phone Number"
          }
        }
      },
      "billTo": {
        "type": "object",
        "title": "Bill To",
        "properties": {
          "billToName": {
            "type": "string",
            "title": "Name"
          },
          "billToEmail": {
            "type": "string",
            "title": "Email"
          }
        }
      },
      "billToCompany": {
        "type": "object",
        "title": "Bill To Company",
        "properties": {
          "billToCompanyName": {
            "type": "string",
            "title": "Name"
          },
          "billToCompanyStreetAddress": {
            "type": "string",
            "title": "Street Address"
          },
          "billToCompanyCity": {
            "type": "string",
            "title": "City"
          },
          "billToCompanyPostalCode": {
            "type": "string",
            "title": "Postal Code"
          },
          "billToCompanyPhoneNumber": {
            "type": "string",
            "title": "Phone Number"
          }
        }
      },
      "billableItems": {
        "type": "array",
        "title": "Billable Items",
        "items": {
          "type": "object",
          "properties": {
            "billableItemsDescription": {
              "type": "string",
              "title": "Description"
            },
            "billableItemsQuantity": {
              "type": "string",
              "title": "Quantity"
            },
            "billableItemsUnitPrice": {
              "type": "string",
              "title": "Unit Price"
            },
            "billableItemsAmount": {
              "type": "string",
              "title": "Amount"
            }
          }
        }
      },
      "subtotal": {
        "type": "string",
        "title": "Subtotal"
      },
      "tax": {
        "type": "string",
        "title": "Tax (%)"
      },
      "taxTotal": {
        "type": "string",
        "title": "Tax Total"
      },
      "total": {
        "type": "string",
        "title": "Total"
      }
    }
  },
  "uiSchema": {
    "date": {
      "ui:widget": "date"
    }
  },
  "extension": "tt"
}
